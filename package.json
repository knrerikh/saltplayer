{
  "name": "saltplayer",
  "version": "1.0.0",
  "description": "Minimalist torrent player with progressive streaming",
  "main": "dist/main/main.js",
  "author": "Konstantin Rerikh <krerikh@gmail.com>",
  "license": "MIT",
  "private": false,
  "keywords": [
    "torrent",
    "player",
    "streaming",
    "video",
    "electron",
    "webtorrent",
    "media-player"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/krerikh/saltplayer.git"
  },
  "homepage": "https://github.com/krerikh/saltplayer#readme",
  "bugs": {
    "url": "https://github.com/krerikh/saltplayer/issues"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\" \"npm run start:dev\"",
    "dev:main": "webpack --config webpack.main.config.js --watch",
    "dev:renderer": "webpack --config webpack.renderer.config.js --watch",
    "start:dev": "wait-on dist/main/main.js dist/renderer/index.html && cross-env NODE_ENV=development electron .",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "webpack --config webpack.main.config.js --mode production",
    "build:renderer": "webpack --config webpack.renderer.config.js --mode production",
    "start": "electron .",
    "package": "electron-builder",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch"
  },
  "dependencies": {
    "@types/fluent-ffmpeg": "^2.1.28",
    "buffer": "^6.0.3",
    "events": "^3.3.0",
    "ffmpeg-static": "^5.3.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "process": "^0.11.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "webtorrent": "^2.1.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@types/webtorrent": "^0.109.6",
    "@vitest/coverage-v8": "^1.1.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "happy-dom": "^12.10.3",
    "html-webpack-plugin": "^5.6.0",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0",
    "wait-on": "^7.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "build": {
    "appId": "com.saltplayer.app",
    "productName": "Salt Player",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.video"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Video"
    }
  }
}
